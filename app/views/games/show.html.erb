
<% if current_user %>
<% @game.player1 = current_user.id %>
<% end %>



<% if @game.first_move == 1 %>
  <% player = User.find(@game.player1) %>
<% else %>
  <% player = User.find(@game.player2) %>
<% end %>

<% if @game.moves.length == 0 %>
You have first move <%= player.username %>
<% end %>


<h1>New game</h1>

<br>


  <% @numbers.each do |n|%>
    <div class="cell">
    <% if n.is_a? Integer %>
      
      <%= form_for(@move) do |f| %>
        <div class="field">
          <%= f.hidden_field :cell_chosen, value: n %>
         
        </div>
        <div class="field">
          <%= f.hidden_field :game_id, value: @game.id  %>
        </div>
        <div class="cell_button"><%= f.submit "#{n}" %></div>
      <% end %>


      
    
    <% else %>
      <%= n %>
    <% end %>
  </div>
  <% end %>