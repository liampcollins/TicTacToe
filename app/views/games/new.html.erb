OR ELSE CHALLENGE SOMEONE
<%= form_for(@game) do |f| %>
  
    <%= f.hidden_field :player1, value: current_user.id %> 
    Player 1: <%= current_user.username %>
  <br>
  <%= f.label :player2, "Who are you challenging?" %><br />
  <%= f.collection_select :player2, User.all, :id, :username, prompt: true %>
